alias cd=' cd'

alias l='ls -CF'
alias la='ls -A'
alias ll='ls -al'
if [[ "$OSTYPE" == "linux-gnu"* ]]; then
    alias ls=' ls --color=auto'
    alias open='xdg-open'
fi
alias lsdir='ls -d */' # only list directories

# List only directories
alias lsd="ls -lF ${colorflag} | grep --color=never '^d'"

# list absolute path
alias lspwd='lspwd(){ls `pwd`/$1};lspwd'
alias lsabs='readlink -f'

alias grep='grep --color=auto'
alias gitst='git st'

# clean screen
alias cl='clear'

alias gdb='gdb -q'
alias cgdb='cgdb -q'

alias weather='curl -s http://wttr.in/\?m | head -n-1'

alias cmakeclean='rm CMakeCache.txt; rm -rf CMakeFiles'

function mkcd() {
    old_dir=`pwd`
    echo "Prev dir: $old_dir";
    new_dir=$1
    new_dir_abs=$old_dir/$new_dir
    mkdir "$1" && cd "$new_dir";
    echo "Current dir: $new_dir_abs";
}
